<?php $order = Mage::registry('current_order');?>
<?php if(!$order) $order = $this->getParentBlock()->getOrder();?>
<?php $credit = Mage::helper('credit')->getCreditByOrder($order)?>
<?php if($credit):?>
	<?php $money = Mage::helper('credit')->exchangeCreditToMoney($credit);?>
	<tr class="rewardpoints">
	    <td style="text-align: right;" class="a-right" colspan="4">Credit</td>
	    <td style="text-align: right;" class="a-right"><span class="price"><?php echo Mage::helper('credit')->formatMoney($money)?></span></td>
	</tr>
<?php endif;?>